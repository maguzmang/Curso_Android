<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hame.maguzman.tareados">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activitys.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activitys.ActivityText" />
        <activity android:name=".activitys.ImageOptActivity" />
        <activity android:name=".activitys.SelectedImageActivity" />
        <activity android:name=".activitys.ListViewImageActivity" />
        <activity
            android:name=".activitys.RecyclerActivity"
            android:label="@string/title_activity_recyclet"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activitys.RecyclerTareaActivity"
            android:label="@string/title_activity_recycler_tarea"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>